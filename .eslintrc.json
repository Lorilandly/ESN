{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "jquery": true,
        "jest/globals": true
    },
    "extends": "standard",
    "plugins": ["jest"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "semi": ["error", "always"],
        "comma-dangle": ["error", "always-multiline"],
        "space-unary-ops": "off",
        "no-console": ["error", { "allow": ["warn", "error"] }]
    }
}
