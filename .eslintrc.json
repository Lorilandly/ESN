{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "jquery": true,
        "jest/globals": true
    },
    "extends": "standard",
    "plugins": ["jest"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "semi": ["error", "always"],
        "comma-dangle": ["warn", "always-multiline"],
        "space-unary-ops": "off",
        "space-before-function-paren": [
            "warn",
            { "anonymous": "always", "named": "never", "asyncArrow": "always" }
        ],
        "no-console": ["warn", { "allow": ["warn", "error"] }]
    }
}
