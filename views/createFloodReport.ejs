<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="/stylesheets/floodReports.css" rel="stylesheet" type="text/css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
        <link rel="stylesheet" href="/bootstrap-icons/bootstrap-icons.css">
        <script src="/socket.io/socket.io.js"></script>
        <link href="/stylesheets/layout.css" rel="stylesheet" type="text/css">
    </head>
    <body>
        <div class="main-container">
            <%- include('./header.ejs') %>
            <form class="flood-report-form" id="flood-report-form">
                <label for="address">Address</label>
                <br>
                <input type="text" id="address" name="address" minlength="5" maxlength="100" required>
                <br>

                <label for="city">City</label>
                <br>
                <input type="text" id="city" name="city" minlength="2" maxlength="50" required>
                <br>
        
                <label for="state">State</label>
                <br>
                <select id="state" name="state" required>
                    <option value="" disabled selected>---</option>
                    <% states.forEach(function(state) { %>
                        <option value="<%= state.abbreviation %>"><%= state.name %></option>
                    <% }); %>
                </select>
                <br>

                <label for="zipcode">Zipcode</label>
                <br>
                <input type="text" id="zipcode" name="zipcode" pattern="[0-9]{5}" title="Zipcode must be exactly 5 numeric digits" required required>
                <br>
        
                <label for="description">Description</label>
                <br>
                <textarea id="description" name="description" maxlength="200" rows="4"></textarea>
                <br>
        
                <button type="submit" class="submit-flood-report-button">Submit</button>
            </form>
            <%- include('./footer.ejs') %>
        </div>
        <script src="/javascripts/alert.js"></script>
        <script src="/javascripts/floodReportForm.js"></script>
    </body>
</html>