<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
        <link href="/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
        <script src="/socket.io/socket.io.js"></script>
        <link href="/stylesheets/layout.css" rel="stylesheet" type="text/css">
        <link href="/stylesheets/profile.css" rel="stylesheet" type="text/css">
    </head>
<body>
    <div class="main-container">
        <%- include('./header.ejs') %>
        <div class = "container-fluid" style="overflow-y: auto; height: 100%;">
            <div class="container">
                <div class="row title">
                    <div class="col">
                        <h1 id="username">Name</h2>
                    </div>
                    <form onsubmit="addEntry(event, this)" class="col mb-3">
                        <div class="input-group ms-auto" style="width: 70%">
                            <input type="text" class="form-control" style="background-color: #f8f9fa;">
                            <button class="btn btn-success" type="submit" id="addButton">
                                <i class="bi bi-plus-lg"></i>
                            </button>
                        </div>
                    </form>
                </div>

                <div id="profileEntryList">
                    <!-- Profile rows will be dynamically added here -->
                </div>

                <h3 class="title">Emergency Contact</h3>
                <div class="row g-3">
                    <div class="col">
                        <label for="emctName">Name</label>
                        <input type="text" form="profileForm" class="form-control" id="_emct_name" placeholder="">
                    </div>
                    <div class="col">
                        <label for="_emct_relation">Relationship</label>
                        <select form="profileForm" class="form-select" id="_emct_relation">
                            <option value="mother">Mother</option>
                            <option value="father">Father</option>
                            <option value="partner">Partner</option>
                            <option value="child">Child</option>
                            <option value="relative">Other Relatives</option>
                            <option value="friend">Friend</option>
                        </select>
                    </div>
                    <div class="col-12">
                        <div class="form-floating mb-3">
                            <input type="email" form="profileForm" class="form-control" id="_emct_email" placeholder="">
                            <label for="_emct_email">Email address</label>
                            <div class="invalid-feedback">
                                Please provide a valid email.
                            </div>
                        </div>
                    </div>
                </div>
                <form onsubmit="updateProfile(event)" id="profileForm" class="needs-validation">
                    <button type="submit" class="btn btn-primary" id="profileSubmit">Submit </button>
                </form>
            </div>
        </div>
        <%- include('./footer.ejs') %>
    </div>
    <script src="/javascripts/profile.js"></script>
</body>
</html>
