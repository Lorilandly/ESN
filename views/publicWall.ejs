<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/stylesheets/publicWall.css" rel="stylesheet" type="text/css">
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link rel="stylesheet" href="/bootstrap-icons/bootstrap-icons.css">
</head>

<body>
    <div class="main-chat-container">
        <div class="chat-header">
            <h1 class="header-text">Emergency Social Network</h1>
        </div>
        <div class="message-container" id="message-container">
        </div>
        <div class="input-container">
            <form class="message-form" id="messageForm">
                <textarea class="message-input" id="message"></textarea>
                <button class="post-button" type="submit">Post</button>
            </form>
        </div>
        <div class="footer">
            <div class="footer-element">
                <form action="/users" method="GET">
                    <button class="action-button">
                        <i class="bi bi-people text-primary"></i>
                    </button>
                </form>
            </div>
            <div class="footer-element">
                <form action="/publicWall" method="GET">
                    <button class="action-button">
                        <i class="bi bi-chat-dots"></i>
                    </button>
                </form>
            </div>
            <div class="footer-element">
                <button class="action-button">
                    <i class="bi bi-chat-heart"></i>
                </button>
            </div>
            <div class="footer-element">
                <form action="/logout" class="main-form" method="GET">
                    <button class="action-button">
                        <i class="bi bi-box-arrow-right"></i>
                    </button>
                </form>
            </div>
        </div>
        
    </div>
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="/javascripts/publicWall.js"></script>
</body>